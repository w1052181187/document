      }],
      searchContent: '',
      tableData: [{
        name: '项目档案',
        status: 0
      }],
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: null, // 总条数
      pageSize: 10, // 每页展示条数
      dialogTableVisible: false,
      dialogTableData: [
        {
          bidStatus: 1
        }
      ],
      isChecked: ''
    }
  },
  watch: {
    $route: 'resetView'
  },
  methods: {
    // 搜索
    search () {},
    // 分页
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
    },
    dataIndex (index) {
      return index + (this.currentPage - 1) * this.pageSize + 1
    },
    handleLookBtn (scope) {
    },
    handleEditBtn (scope) {
    },
    handleDelBtn (scope) {
    },
    handleCurrentNext () {},
    handleConfirm () {
      this.dialogTableVisible = false
      let bidInfo = this.dialogTableData.filter(item => item.radio === this.isChecked)
      console.log(bidInfo)
      if (bidInfo.length <= 0) {
        this.$message({
          message: '请先选择标段',
          type: 'warning'
        })
        return false
      }
      if (bidInfo[0].bidStatus) {
        // 已结束
        this.$router.push({path: `/archives/management/add`})
      } else {
        // 未结束
        this.$alert('该标段流程未结束，不允许归档', '提示:', {
          confirmButtonText: '关闭',
          type: 'warning'
        })
      }
    }
  },
