<template>
  <div class="cloudcontent" id="archives_add">
    <div class="main">
      <ul class="step">
        <li :class="active === 1 ? 'active' : 'prev'">
          <i>1</i>
          <span>基本信息</span>
          <em></em>
        </li>
        <li :class="active === 2 ? 'active' : (active === 3) ? 'prev' : ''">
          <i>2</i>
          <span>归档文件</span>
          <em></em>
        </li>
        <li :class="active === 3 ? 'active' : ''">
          <i>3</i>
          <span>归档完成</span>
        </li>
      </ul>
      <basicInfo v-if="active === 1"></basicInfo>
      <file v-if="active === 2"></file>
      <fileEnd v-if="active === 3"></fileEnd>
      <div class="submit-radio">
        <el-button class="cancal" @click="lastStep()" v-if="active !== 1">{{lastText}}</el-button>
        <el-button type="primary" @click="nextStep()" v-if="active !== 3">{{stepText}}</el-button>
      </div>
    </div>
  </div>
</template>

<script>
export default {
  name: 'add',
  components: {
    // 基本信息
    basicInfo: resolve => require(['./basicInfo.vue'], resolve),
    // 归档文件
    file: resolve => require(['./file.vue'], resolve),
    // 归档完成
    fileEnd: resolve => require(['./fileEnd.vue'], resolve)
  },
  data () {
    return {
      stepText: '下一步',
      lastText: '上一步',
      // 步骤条
      active: 1,
      updateForm: {
      },
      rules: {
      }
    }
  },
  methods: {
    // 下一步
    nextStep () {
      switch (this.active) {
        case 1:
          this.active++
          this.stepText = '归档'
          break
        case 2:
          this.active++
          this.lastText = '关闭'
          break
      }
    },
    lastStep () {
      switch (this.active) {
        case 2:
          this.active--
          this.stepText = '下一步'
          break
        case 3:
          // 关闭
          break
      }
    }
  }
}
</script>

