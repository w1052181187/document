<template>
  <div class="cloudcontent" id="cloud_customer_add">
    <el-table
      :data="tableData"
      v-loading="loading"
      style="width: 100%">
      <el-table-column
        type="index"
        label="序号"
        width="60"
        align="center">
      </el-table-column>
      <el-table-column
        prop="name"
        label="企业名称">
      </el-table-column>
      <el-table-column label="参与本业主项目情况">
        <el-table-column
          prop="ownerProjectSituationList.length"
          label="项目数量">
        </el-table-column>
        <el-table-column
          prop="ownerProjectsAmount"
          label="项目金额">
        </el-table-column>
      </el-table-column>
      <el-table-column
        prop="name"
        label="竞争力">
        <template slot-scope="scope">
          <el-rate v-model="scope.row.level" disabled></el-rate>
        </template>
      </el-table-column>
      <el-table-column
        label="操作" align="center" width="200">
        <template slot-scope="scope">
          <el-button type="text" size="small" @click="showCompetitorDetailDialog(scope.row.objectId)">查看</el-button>
        </template>
      </el-table-column>
    </el-table>
    <!--分页-->
    <el-pagination
      background
      layout="prev, pager, next"
      :total="page.total"
      :page-size='page.pageSize'
      :current-page.sync="page.currentPage"
      @current-change="handlePage"
      @next-click="handlePage">
    </el-pagination>
    <!--分页-->
    <!--弹窗  竞争对手分析 详情-->
    <competitor-detail :showVisible="showCompetitorDetail" :objectId="detailComperitorId" @showDialog="showCompetitorDetailDialog"/>
    <!--弹窗  竞争对手分析 详情-->
  </div>
</template>
<script>
import {competitor} from '@/api/customer'
import CompetitorDetail from './detail'
export default {
  components: {
    CompetitorDetail
  },
  data () {
    return {
      loading: false,
      page: {
        pageSize: 10,
        pageNo: 1,
        total: 0, // 总条数
        currentPage: 1
      },
      queryModel: {
        managementCode: this.relatedCode,
        isDelete: 0
      },
      tableData: [],
      // 详情弹框
      showCompetitorDetail: false,
      detailComperitorId: null
    }
  },
  props: ['relatedCode'],
  methods: {
    getTableData () {
      // 查询竞争对手
      this.queryModel.pageNo = this.page.pageNo
      this.queryModel.pageSize = this.page.pageSize
      this.loading = true
      competitor.queryList(this.queryModel).then(res => {
        this.loading = false
        this.tableData = res.data.data.list
        this.page.total = res.data.data.total
      })
    },
    // 竞争对手分析详情弹框
    showCompetitorDetailDialog (objectId) {
      this.showCompetitorDetail = !this.showCompetitorDetail
      this.detailComperitorId = objectId || null
    },
    // 表单分页
    handlePage (nowNum) {
      this.page.currentPage = nowNum
      this.page.pageNo = (nowNum - 1) * this.page.pageSize
      this.getTableData()
    }
  },
  mounted () {
    this.getTableData()
  }
}
</script>
<style lang="less">
  #cloud_customer_add {
  }
</style>
