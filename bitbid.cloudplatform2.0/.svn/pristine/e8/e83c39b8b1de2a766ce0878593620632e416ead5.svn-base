<template>
  <div class="cloudcontent" id="file-query">
    <div class="main">
      <div>
        <el-form :model="searchForm" label-width="70px">
          <div class="search-item-box">
            <el-form-item label="档案类别：">
              <el-select class="select" v-model="searchForm.type" placeholder="请选择" >
                <el-option
                  v-for="item in typeOptions"
                  :key="item.objectId"
                  :label="item.name"
                  :value="item.objectId">
                </el-option>
              </el-select>
            </el-form-item>
          </div>
          <div class="search-item-box">
            <el-form-item label="档案名称：">
              <el-input class="select" placeholder="请输入关键字" v-model="searchForm.tenderProjectNameSearch"></el-input>
            </el-form-item>
          </div>
          <div class="search-item-box">
            <el-form-item label="档案编号：">
              <el-input class="select" placeholder="请输入关键字" v-model="searchForm.numberSearch"></el-input>
            </el-form-item>
          </div>
          <div class="search-item-box">
            <el-form-item label="归档时间：">
              <el-date-picker
                class="select"
                v-model="searchForm.time"
                type="datetimerange"
                range-separator="-"
                start-placeholder="开始日期"
                end-placeholder="结束日期"
                value-format="yyyy-MM-dd HH:mm:ss">
              </el-date-picker>
              <el-button class="search-btn" @click="handleSearch">
                <span>查询</span>
              </el-button>
            </el-form-item>
          </div>
        </el-form>
      </div>
      <el-table
        :data="tableData"
        border
        style="width: 100%" header-cell-class-name="tableheader">
        <el-table-column
          type="index"
          label="序号"
          width="60"
          :index='dataIndex'
          align="center">
        </el-table-column>
        <el-table-column
          prop="classifyId"
          label="档案类别"
          align="center"
          width="120"
          show-overflow-tooltip>
          <template slot-scope="scope">
            <span v-if="scope.row.classifyId === 10000">项目档案</span>
          </template>
        </el-table-column>
        <el-table-column
          prop="name"
          label="档案名称"
          align="center"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="archivesCode"
          label="档案编码"
          align="center"
          width="240"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="archivingPersonName"
          label="归档人"
          align="center"
          width="80"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="archivingDepartmentName"
          label="归档部门"
          align="center"
          width="120"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="filingTime"
          label="归档时间"
          align="center"
          width="160"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="fileStatus"
          label="档案状态"
          align="center"
          width="80"
          show-overflow-tooltip>
          <template slot-scope="scope">
            <span>{{scope.row.fileStatus === 1 ? '已归档' : '未归档'}}</span>
          </template>
        </el-table-column>
        <el-table-column
          label="操作" align="center" width="80">
          <template slot-scope="scope">
            <el-button type="text" size="small" @click="handleBtn(scope.row)">查阅</el-button>
          </template>
        </el-table-column>
      </el-table>
      <!--分页-->
      <el-pagination
        background
        layout="prev, pager, next"
        :total="total"
        :page-size='pageSize'
        :current-page.sync="currentPage"
        @current-change="handleCurrentChange">
      </el-pagination>
      <!--分页-->
    </div>
  </div>
</template>
<script>
import {archivesInfo, archivesClassify} from '@/api/archives'
export default {
  components: {
  },
  data () {
    return {
      searchForm: {
        time: [],
        startTime: '',
        endTime: ''
      },
      typeOptions: [],
      tableData: [],
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: null, // 总条数
      pageSize: 10 // 每页展示条数
    }
  },
  watch: {
  },
  methods: {
    getData () {
      let query = {
        pageNo: this.pageNo,
        pageSize: this.pageSize,
        classifyId: this.searchForm.type,
        messageLike: this.searchForm.tenderProjectNameSearch,
        numberLike: this.searchForm.numberSearch,
        enterpriseId: this.$store.getters.authUser.enterpriseId,
        status: 1
      }
      if (this.searchForm.time.length > 1) {
        this.$set(query, 'startTime', this.searchForm.time[0])
        this.$set(query, 'endTime', this.searchForm.time[1])
      }

      archivesInfo.getArchivesInfoList(query).then((res) => {
        this.tableData = res.data.archivesInfoList.list
        this.total = res.data.archivesInfoList.total
      })

      archivesClassify.getArchivesClassifyList({
        pageNo: 0,
        pageSize: 10
      }).then((res) => {
        if (res.data.resCode === '0000') {
          this.typeOptions = res.data.archivesClassifyList.list
        }
      })
    },
    // 文件目录
    handleBtn (row) {
      this.$router.push({path: `/archives/management/detail/` + row.objectId})
    },
    // 分页
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
      this.getData()
    },
    dataIndex (index) {
      return index + (this.currentPage - 1) * this.pageSize + 1
    },
    // 搜索
    handleSearch () {
      this.getData()
    }
  },
  mounted () {
    this.getData()
  }
}
</script>
