<template>
  <div class="cloudcontent" id="cloud_fileSet">
    <div class="main">
      <el-form :model="updateForm" :validate-on-rule-change="true">
        <el-row>
          <el-table
            :data="updateForm.processData"
            border
            header-cell-class-name="tableheader">
            <el-table-column
              type="index"
              label="序号"
              width="60"
              :index='dataIndex'
              align="center">
            </el-table-column>
            <el-table-column
              prop="name"
              label="文件目录"
              show-overflow-tooltip>
            </el-table-column>
            <el-table-column
              prop="type"
              label="类型"
              show-overflow-tooltip>
              <template slot-scope="scope">
                <span  v-if="scope.row.type === 1">预设分类</span>
                <span  v-if="scope.row.type === 2">自定义分类</span>
              </template>
            </el-table-column>
            <el-table-column
              label="操作"
              align="center"
              width="200">
              <template slot-scope="scope">
                <el-radio v-model="scope.row.status" :label="1" @change="enableCatalog(scope)">启用</el-radio>
                <el-radio v-model="scope.row.status" :label="2" @change="disableCatalog(scope)">禁用</el-radio>
              </template>
            </el-table-column>
          </el-table>
          <!--分页-->
          <el-pagination
            background
            layout="prev, pager, next"
            :total="total"
            :page-size='pageSize'
            :current-page.sync="currentPage"
            @current-change="handleCurrentChange">
          </el-pagination>
          <!--分页-->
        </el-row>
      </el-form>
    </div>
  </div>
</template>
<script>
import {archivesCatalog} from '@/api/archives'

export default {
  data () {
    return {
      updateForm: {
        processData: []
      },
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: null, // 总条数
      pageSize: 10 // 每页展示条数
    }
  },
  created () {
  },
  methods: {
    getData () {
      archivesCatalog.getArchivesCatalogList({
        pageNo: this.pageNo,
        pageSize: this.pageSize,
        classifyId: this.$route.params.objectId,
        enterpriseId: this.$store.getters.authUser.enterpriseId
      }).then((res) => {
        this.updateForm.processData = res.data.archivesClassifyList.list
        this.total = res.data.archivesClassifyList.total
      })
    },
    // 启用
    enableCatalog (scope) {
      archivesCatalog.enableCatalog(scope.row.objectId).then((res) => {
        if (res.data.resCode === '0000') {
          this.getData()
        }
      })
    },
    disableCatalog (scope) {
      archivesCatalog.disableCatalog(scope.row.objectId).then((res) => {
        if (res.data.resCode === '0000') {
          this.getData()
        }
      })
    },
    // 分页
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
      this.getData()
    },
    dataIndex (index) {
      return index + (this.currentPage - 1) * this.pageSize + 1
    }
  },
  mounted () {
    this.getData()
  }
}
</script>
