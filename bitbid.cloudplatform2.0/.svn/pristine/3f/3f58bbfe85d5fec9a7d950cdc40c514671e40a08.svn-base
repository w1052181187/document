          </el-form>
          <div class="addbutton"><span @click="addRow(3)">+ 新增</span></div>
        </el-tab-pane>
      </el-tabs>
      <div slot="footer" class="dialog-footer">
        <el-button type="primary" @click="submit">保 存</el-button>
        <el-button @click="cancel">取 消</el-button>
      </div>
    </el-dialog>
  </div>
</template>
<script>
import {validMoney, validWhoInteger, validatePercentage} from '@/assets/js/validate'
import { Message } from 'element-ui'
export default {
  data () {
    let validate100Percent = (rule, value, callback) => {
      let percent = 0
      this.currentEnterShips.enterShip_type0.forEach(item => { percent += Number(item.proportion) })
      if (!value) {
        callback()
      } else if (!validatePercentage(value)) {
        callback(new Error('输入有误，请重新录入！'))
      } else if (percent > 100) {
        callback(new Error('占比超过100%，请重新录入！'))
      } else {
        callback()
      }
    }
    return {
      activeTab: 'enterShip_type0',
      validateFlag: true,
      currentEnterShips: {
        enterShip_type0: [],
        enterShip_type1: [],
        enterShip_type2: [],
        enterShip_type3: [],
        enterShip_type4: []
      },
      rules: {
        simpleText: [
          { min: 1, max: 20, message: '长度在1~20个字符', trigger: ['blur', 'change'] }
        ],
        simpleRequiredText: [
          { required: true, message: '输入不能为空', trigger: ['blur', 'change'] },
          { min: 1, max: 20, message: '长度在1~20个字符', trigger: ['blur', 'change'] }
        ],
        positiveInteger: [
          { validator: validWhoInteger, trigger: ['blur', 'change'] }
        ],
        money: [
          { validator: validMoney, trigger: ['blur', 'change'] }
        ],
        percentage: [
          { validator: validate100Percent, trigger: ['blur', 'change'] }
        ]
      }
    }
  },
  props: ['showVisible', 'enterShipMap', 'relatedCode'],
  watch: {
    showVisible (value) {
      if (value) {
        this.currentEnterShips = {
          enterShip_type0: [],
          enterShip_type1: [],
          enterShip_type2: [],
          enterShip_type3: [],
          enterShip_type4: []
        }
        for (let i in this.enterShipMap) {
          this.enterShipMap[i].forEach(item => {
            this.currentEnterShips[i].push(Object.assign({}, item))
          })
        }
      }
    }
  },
  methods: {
    // 增加一行
    addRow (type) {
      this.$refs[`enterShip_type${type}`].validate((valid) => {
        if (valid) {
          let cooperator = {
            analysisCode: this.relatedCode,
            name: '',
            project: '',
            type: type
          }
          this.currentEnterShips[`enterShip_type${type}`].push(cooperator)
        }
      })
    },
    // 删除一行
    delRow (index, type) {
      this.currentEnterShips[`enterShip_type${type}`].splice(index, 1)
    },
    // 保存
    submit () {
      if (this.currentEnterShips.enterShip_type0.length || this.currentEnterShips.enterShip_type1.length || this.currentEnterShips.enterShip_type2.length || this.currentEnterShips.enterShip_type3.length) {
        for (let i = 0; i < 4; i++) {
          this.validate(i)
          if (!this.validateFlag) {
            return false
          }
        }
        if (this.validateFlag) {
          this.$emit('submit', this.currentEnterShips)
          this.cancel()
        }
      } else {
        Message({
          message: '请添加数据',
          type: 'error',
          duration: 3 * 1000
        })
      }
    },
    // 验证
    validate (type) {
      let mark = `enterShip_type${type}`
      this.$refs[mark].validate((valid) => {
        if (valid) {
          this.validateFlag = true
        } else {
          this.validateFlag = false
          this.activeTab = mark
        }
      })
    },
    // 关闭
    cancel () {
      this.$emit('showDialog')
    }
  }
}
</script>
