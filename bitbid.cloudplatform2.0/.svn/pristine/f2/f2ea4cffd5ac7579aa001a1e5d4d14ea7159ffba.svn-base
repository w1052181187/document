        this.$router.push({path: `/project/proSettlement/otherIncomePay/otherPayDetail/${rowData.detailId}`, query: {text: this.pageText}})
      } else if (this.pageText === '支出') {
        this.$router.push({path: `/project/proSettlement/otherIncomePay/payDetail/${rowData.detailId}`, query: {text: this.pageText}})
      }
    },
    goBack () {
      this.$router.push({path: `/project/proSettlement/paymentTerm`})
    },
    update (rowData) {
      if (this.pageText === '其他收支') {
        this.$router.push({path: `/project/proSettlement/otherIncomePay/otherPayAdd/${rowData.detailId}`, query: {text: this.pageText}})
      } else if (this.pageText === '支出') {
        this.$router.push({path: `/project/proSettlement/otherIncomePay/payAdd/${rowData.detailId}`, query: {text: this.pageText}})
      }
    },
    delBtn () {
      this.$confirm('确认删除吗?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'error'
      }).then(() => {
      }).catch(() => {
