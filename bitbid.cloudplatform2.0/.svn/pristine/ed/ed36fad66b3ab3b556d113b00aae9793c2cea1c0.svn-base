            <el-option
              v-for="item in statusOptions"
              :key="item.value"
              :label="item.label"
              :value="item.value">
            </el-option>
          </el-select>
          <div class="handBtn">
            <el-button  type="primary" @click="search">查询</el-button>
            <el-button  @click="reset">重置</el-button>
          </div>
        </div>
      </el-row>
    </div>
    <!--搜索 & 添加按钮-->
    <div class="main">
      <el-button class="listbutton" @click="handleHistoryList"><img src="../../../assets/liebiao_b.png"/><span>项目列表</span></el-button>
      <el-button class="addbutton" @click="handleAddHistory">+&nbsp;&nbsp;新增项目</el-button>
      <span class="hint">找不到符合条件的项目？</span>
      <el-table
        :data="tableData"
        border
        header-cell-class-name="tableheader">
        <el-table-column
          type="index"
          label="序号"
          align="center"
          :index="indexMethod"
          width="80">
        </el-table-column>
        <el-table-column
          prop="title"
          label="项目名称"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="title"
          label="标段编号"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="title"
          label="标段名称"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="title"
          label="最新移交时间"
          width="160"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="title"
          label="最新移交人"
          width="120"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="status"
          label="移交状态"
          width="120">
          <template slot-scope="scope">
            <span  v-if="scope.row.status === 1">待移交</span>
            <span  v-if="scope.row.status === 2">部分移交</span>
            <span  v-if="scope.row.status === 3">已退回</span>
            <span  v-if="scope.row.status === 4">全部移交</span>
          </template>
        </el-table-column>
        <el-table-column
          label="移交进度"
          align="center"
          width="80">
          <template slot-scope="scope">
            <span>{{scope.row.num}}/{{scope.row.total}}</span>
          </template>
        </el-table-column>
        <el-table-column
          label="操作" align="center" width="100">
          <template slot-scope="scope">
            <el-button type="text" size="small" @click="handleTransfer(scope)">移交</el-button>
            <el-button type="text" size="small" @click="handleDetail(scope)">查看</el-button>
          </template>
        </el-table-column>
      </el-table>
      <!--分页-->
      <el-pagination
        background
        layout="prev, pager, next"
        :total="total"
        :page-size='pageSize'
        :current-page.sync="currentPage"
        @current-change="handleCurrentChange">
      </el-pagination>
      <!--分页-->
    </div>
  </div>
</template>

<script>
export default {
  name: '',
  data () {
    return {
      search_input: '',
      status: '',
      type: '',
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: 0, // 总条数
      pageSize: 10, // 每页展示条数
      tableData: [
        {
          isReaded: true,
          title: '辅导费付付付多地方的纷纷的芙蓉芙蓉'
        },
        {
          isReaded: false,
          title: '辅导费付付付多地方的纷纷的芙蓉芙蓉'
        }
      ],
      statusOptions: [
        {
          value: 0,
          label: '待移交'
        }, {
          value: 1,
          label: '部分移交'
        },
        {
          value: 2,
          label: '已退回'
        }, {
          value: 3,
          label: '全部移交'
        }
      ]
    }
  },
  methods: {
    indexMethod (index) {
      return index + (this.currentPage - 1) * 10 + 1
    },
    // 重置
    reset () {},
    // 搜索
    search () {},
    // 获取列表数据
    getData () {
    },
    // 分页
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
      this.getData(parseInt(this.pageNo), parseInt(this.pageSize))
    },
    // 新增历史项目
    handleAddHistory () {
      this.$router.push({path: '/archives/transfer/addHistory'})
    },
    // 项目列表
    handleHistoryList () {
      this.$router.push({path: '/archives/transfer/historyList'})
    },
    handleDetail (scope) {
      this.$router.push({path: `/archives/transfer/detail/${scope.row.objectId}`})
    },
    handleTransfer (scope) {
      this.$router.push({path: `/archives/transfer/add/${scope.row.objectId}`})
    },
    init () {
      this.getData()
    }
  },
  watch: {
    '$route': 'init'
  },
  mounted () {
    this.init()
  }
}
</script>

