      title="选择日志模板"
      :visible.sync="dialogVisible"
      width="635px"
      class="dialog">
      <div class="tabList">
        <ul>
          <li :class="dialogActive === 1 ? 'active': ''" @click="getList('最近使用')">最近使用</li>
          <li :class="dialogActive === 2 ? 'active': ''" @click="getList('全部模板')">全部模板</li>
          <li :class="dialogActive === 3 ? 'active': ''" @click="getList('推荐模板')">推荐模板</li>
        </ul>
      </div>
