  methods: {
    getTableData () {},
    search () {},
    addBtn () {
      if (this.pageText === '其他收支') {
        this.$router.push({path: `/project/proSettlement/otherIncomePay/otherPayAdd`, query: {text: this.pageText}})
      } else if (this.pageText === '支出') {
        this.$router.push({path: `/project/proSettlement/otherIncomePay/payAdd`, query: {text: this.pageText}})
      }
    },
    indexMethod () {},
    lookBtn (rowData) {
