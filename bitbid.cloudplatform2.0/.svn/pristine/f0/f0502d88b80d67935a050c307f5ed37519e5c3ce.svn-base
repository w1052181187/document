          </div>
        </li>
      </ul>
      <!--按钮-->
      <el-button class="add-file" @click="handleAddFileDir">
        <span> + 增加文件目录</span>
      </el-button>
      <!--分页-->
      <el-pagination
        background
        layout="prev, pager, next"
        :total="info.archivesFileList.length"
        :current-page.sync="currentPage"
        :page-size='pageSize'
        @current-change="handleCurrentChange">
      </el-pagination>
      <!--分页-->

      <el-dialog :before-close='close' title="新增文件类型" :visible.sync="dialogVisible">
        <el-form :model="dialogForm" :rules="rules" ref="dialogForm" :label-width="formLabelWidth">
          <el-form-item label="文件类型：" prop="fileType">
            <el-select v-model="dialogForm.fileType" placeholder="请选择">
              <el-option
                v-for="item in fileTypeOptions"
                :key="item.archivesCatalog.objectId"
                :label="item.archivesCatalog.name"
                :value="item.archivesCatalog.objectId">
              </el-option>
            </el-select>
          </el-form-item>
        </el-form>
        <div slot="footer" class="dialog-footer">
          <el-button class="cancal" @click="close">取 消</el-button>
          <el-button type="primary" @click="submitForm('dialogForm')">确认</el-button>
        </div>
      </el-dialog>
    </div>
  </div>
</template>

<script>
import {archivesFile, archivesInfo} from '@/api/archives'

export default {
  watch: {
  },
  components: {
    // () => import(/* webpackChunkName: 'customer' */ '@/pages/customer/business/index')
    prequalification: resolve => require(['./public/prequalification'], resolve),
    tenderer: resolve => require(['./public/tenderer'], resolve),
    prequalificationDoc: resolve => require(['./public/prequalificationDoc'], resolve),
    prequalificationApplication: resolve => require(['./public/prequalificationApplication'], resolve),
    returns: resolve => require(['./public/returns'], resolve),
    resultNote: resolve => require(['./public/resultNote'], resolve),
    bidding: resolve => require(['./public/bidding'], resolve),
    biddingDoc: resolve => require(['./public/biddingDoc'], resolve),
    tenderDoc: resolve => require(['./public/tenderDoc'], resolve),
    bidOpening: resolve => require(['./public/bidOpening'], resolve),
    evaluation: resolve => require(['./public/evaluation'], resolve),
    picketage: resolve => require(['./public/picketage'], resolve),
    jobEvaluation: resolve => require(['./public/jobEvaluation'], resolve),
    fileUpload: resolve => require(['./public/fileUpload'], resolve)
  },
  name: 'file',
  props: ['info'],
  data () {
    return {
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: null, // 总条数
      pageSize: 10, // 每页展示条数
      activeName: '',
      canEdit: true,
      dialogVisible: false,
      formLabelWidth: '120px',
      dialogForm: {
      },
      rules: {
        fileType: [
          {required: true, message: '请选择文件类型', trigger: ['blur', 'change']}
        ]
      },
      fileTypeOptions: []
    }
  },
  methods: {
    // 分页
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
    },
    dataIndex (index) {
      return index + (this.currentPage - 1) * this.pageSize + 1
    },
    updateBtn (item) {
      if (this.activeName === item.archivesCatalog.name) {
        this.activeName = ''
      } else {
        this.activeName = item.archivesCatalog.name
      }
    },
    // 删除
    delBtn (item, index) {
      this.$confirm('确认删除吗?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'error'
      }).then(() => {
        archivesFile.deleteArchivesFile(item.objectId).then((res) => {
          if (res.data.resCode === '0000') {
            this.info.archivesFileList.splice(index, 1)
          }
        })
      }).catch(() => {
        return false
      })
    },
    handleAddFileDir () {
      this.dialogVisible = true
      // 获取目录
      archivesInfo.getUnaddedCatalog({
        tenderSystemCode: this.info.tenderSystemCode,
        objectId: this.info.objectId,
        enterpriseId: this.info.enterpriseId
      }).then((res) => {
        if (res.data.resCode === '0000') {
          this.fileTypeOptions = res.data.archivesFileList
        }
      })
    },
    close () {
      this.dialogVisible = false
      this.$refs.dialogForm.resetFields()
    },
    // 增加文件目录
    submitForm (formName) {
      this.$refs[formName].validate((valid) => {
        if (valid) {
          this.fileTypeOptions.forEach(item => {
            if (this.dialogForm.fileType === item.archivesCatalog.objectId) {
              archivesFile.addArchivesFile(item).then((res) => {
                this.info.archivesFileList.push(res.data.archivesFile)
                this.dialogVisible = false
                this.dialogForm.fileType = ''
              })
            }
          })
        } else {
          return false
        }
      })
    }
  },
  mounted () {
  }
}
</script>

