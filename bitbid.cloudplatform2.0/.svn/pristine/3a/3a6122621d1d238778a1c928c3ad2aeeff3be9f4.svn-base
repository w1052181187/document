    <el-form :model="info" label-width="84px">
      <el-row>
        <el-col :span="12">
          <el-form-item label="档案名称：">
            <span>{{info.name}}</span>
          </el-form-item>
        </el-col>
        <el-col :span="12">
          <el-form-item label="档案编号：">
            <span>{{info.archivesCode}}</span>
          </el-form-item>
        </el-col>
      </el-row>
      <el-row>
        <el-col :span="12">
          <el-form-item label="移交人：">
            <span>{{info.lastTransferName}}</span>
          </el-form-item>
        </el-col>
        <el-col :span="12">
          <el-form-item label="档案管理员：">
            <span>{{info.adminName}}</span>
          </el-form-item>
        </el-col>
      </el-row>
      <el-row>
        <el-col :span="12">
          <el-form-item label="归档时间：">
            <span>{{info.filingTime}}</span>
          </el-form-item>
        </el-col>
        <el-col :span="12">
          <el-form-item label="档案状态：">
            <span>正常</span>
          </el-form-item>
        </el-col>
      </el-row>
    </el-form>
    <template v-if="isShowTransferRecord">
      <div class="basic-info-title">档案移交记录</div>
      <el-form>
        <el-table
          :data="info.archivesClassifyList"
          border
          style="width: 100%" header-cell-class-name="tableheader">
          <el-table-column
            width="50"
            type="index"
            align="center"
            label="序号">
          </el-table-column>
          <el-table-column
            prop="name"
            label="档案目录"
            align="center"
            show-overflow-tooltip>
          </el-table-column>
          <el-table-column
            prop="transferStatus"
            label="移交状态"
            align="center"
            width="100"
            show-overflow-tooltip>
            <template slot-scope="scope">
              <span v-if="scope.row.transferStatus === 0">待移交</span>
              <span v-if="scope.row.transferStatus === 1">已接收</span>
              <span v-if="scope.row.transferStatus === 2">已移交</span>
              <span v-if="scope.row.transferStatus === 3">已退回</span>
            </template>
          </el-table-column>
          <el-table-column
            prop="lastTransferName"
            label="最新移交人"
            align="center"
            width="120"
            show-overflow-tooltip>
          </el-table-column>
          <el-table-column
            prop="lastTransferTime"
            label="最新移交时间"
            align="center"
            width="160"
            show-overflow-tooltip>
          </el-table-column>
          <el-table-column
            prop="status"
            label="归档状态"
            align="center"
            width="100"
            show-overflow-tooltip>
            <template slot-scope="scope">
              <span v-if="scope.row.transferStatus === 0"></span>
              <template v-else>
                <span v-if="scope.row.status === 0">未归档</span>
                <span v-if="scope.row.status === 1" class="transferStatus-accept">已归档</span>
              </template>
            </template>
          </el-table-column>
          <el-table-column
            prop="filingTime"
            label="归档时间"
            align="center"
            width="160"
            show-overflow-tooltip>
          </el-table-column>
        </el-table>
      </el-form>
    </template>
    <div class="basic-info-title">实物档案信息</div>
    <el-form :model="info" label-width="70px">
      <el-form-item label="档案位置：">
        <span>{{info.detailedLocation}}</span>
      </el-form-item>
      <el-form-item label="实物编号：">
        <span>{{info.physicalNumber}}</span>
      </el-form-item>
      <el-table
        :data="info.archivesClassifyList"
        border
        style="width: 100%" header-cell-class-name="tableheader">
        <el-table-column
          width="50"
          type="index"
          align="center"
          label="序号">
        </el-table-column>
        <el-table-column
          prop="name"
          label="档案目录"
          align="center"
          width="200"
          show-overflow-tooltip>
