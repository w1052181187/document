<template>
  <div class="cloudcontent" id="file-query">
    <div class="topmain" style="border-bottom: 0px;">
       <el-form :model="searchForm" label-width="70px" style="width:100%">
        <el-row :gutter="20">
          <el-col style="width: 320px; float: left;">
            <el-form-item label="档案名称：">
              <el-input class="select" placeholder="请输入关键字" v-model="searchForm.archivesInfoNameLike"></el-input>
            </el-form-item>
          </el-col>
          <el-col style="width: 320px; float: left;">
            <el-form-item label="档案编号：">
              <el-input class="select" placeholder="请输入关键字" v-model="searchForm.numberSearch"></el-input>
            </el-form-item>
          </el-col>
          <el-col style="width: 500px; float: left;">
            <el-form-item label="归档时间：">
              <el-date-picker
                class="select"
                v-model="searchForm.time"
                type="daterange"
                range-separator="-"
                start-placeholder="开始日期"
                end-placeholder="结束日期"
                value-format="yyyy-MM-dd">
              </el-date-picker>
            </el-form-item>
          </el-col>
          <el-col class="handBtn" style="width: 180px; float: left;">
            <el-button type="primary" class="search-btn" @click="handleSearch">
              <span>查询</span>
            </el-button>
            <el-button @click="reset">
              <span>重置</span>
            </el-button>
          </el-col>
        </el-row>
      </el-form>
    </div>
    <div class="main">
      <el-table
        :data="tableData"
        border
        style="width: 100%" header-cell-class-name="tableheader">
        <el-table-column
          type="index"
          label="序号"
          width="60"
          :index='dataIndex'
          align="center">
        </el-table-column>
        <el-table-column
          prop="physicalNumber"
          label="档案号"
          align="center"
          width="100"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="name"
          label="档案名称"
          align="left"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="archivesCode"
          label="档案编号"
          align="left"
          width="200"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="detailedLocation"
          label="实物档案位置"
          align="left"
          show-overflow-tooltip>
        </el-table-column>>
        <el-table-column
          prop="filingTime"
          label="归档时间"
          align="center"
          width="160"
          show-overflow-tooltip>
        </el-table-column>
        <el-table-column
          prop="fileStatus"
          label="档案状态"
          align="center"
          width="80"
          show-overflow-tooltip>
          <template slot-scope="scope">
            <span>正常</span>
          </template>
        </el-table-column>
        <el-table-column
          label="操作" align="center" width="80">
          <template slot-scope="scope">
            <el-button type="text" size="small" @click="handleBtn(scope.row)">查看</el-button>
          </template>
        </el-table-column>
      </el-table>
      <!--分页-->
      <el-pagination
        background
        layout="prev, pager, next"
        :total="total"
        :page-size='pageSize'
        :current-page.sync="currentPage"
        @current-change="handleCurrentChange">
      </el-pagination>
      <!--分页-->
    </div>
  </div>
</template>
<script>
import {archivesInfo} from '@/api/archives'
export default {
  components: {
  },
  data () {
    return {
      searchForm: {
        time: [],
        startTime: '',
        endTime: '',
        numberSearch: '',
        archivesInfoNameLike: ''
      },
      typeOptions: [],
      tableData: [],
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: null, // 总条数
      pageSize: 10 // 每页展示条数
    }
  },
  props: ['archivesRoomId', 'archivesCabinetId', 'query'],
  watch: {
  },
  methods: {
    getData () {
      let query = {
        pageNo: this.pageNo,
        pageSize: this.pageSize,
        messageLike: this.searchForm.archivesInfoNameLike,
        numberLike: this.searchForm.numberSearch,
        enterpriseId: this.$store.getters.authUser.enterpriseId,
        status: 1,
        archivesRoomId: this.archivesRoomId,
        archivesCabinetId: this.archivesCabinetId,
        query: this.query
      }
      if (this.searchForm.time.length > 1) {
        this.$set(query, 'startTime', this.searchForm.time[0] + ' 00:00:00')
        this.$set(query, 'endTime', this.searchForm.time[1] + ' 23:59:59')
      }
      archivesInfo.getArchivesInfoList(query).then((res) => {
        this.tableData = res.data.archivesInfoList.list
        this.total = res.data.archivesInfoList.total
      })
    },
    handleBtn (row) {
      this.$router.push({path: `/archives/query/detail/` + row.objectId + '?status=1'})
    },
    // 分页
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
      this.getData()
    },
    dataIndex (index) {
      return index + (this.currentPage - 1) * this.pageSize + 1
    },
    // 搜索
    handleSearch () {
      this.getData()
    },
    reset () {
      this.currentPage = 1
      this.pageNo = 0
      this.searchForm.archivesInfoNameLike = ''
      this.searchForm.numberSearch = ''
      this.searchForm.time = []
      this.getData()
    }
  },
  mounted () {
    this.getData()
  }
}
</script>
