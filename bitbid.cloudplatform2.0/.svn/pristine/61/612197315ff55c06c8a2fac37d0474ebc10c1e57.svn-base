        series: [
          {
            type: 'pie',
            data: this.incomeRatioData,
            width: '80%',
            startAngle: 270, // 起始角度
            itemStyle: {
              normal: {
                label: {
                  show: true, // 开启显示
                  formatter: '{c} {d}%',
                  textStyle: { // 数值样式
                    color: '#333'
                  }
                }
              }
            }
          }
        ]
      }
      this.incomeRatioCharts.setOption(option)
    },
    // 各项支出占比图表
    loadExpenditureRatio () {
