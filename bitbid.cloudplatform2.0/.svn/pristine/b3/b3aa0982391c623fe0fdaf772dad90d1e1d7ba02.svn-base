      <!--分页-->
      <el-pagination
        background
        layout="prev, pager, next"
        :total="total"
        :page-size='pageSize'
        :current-page.sync="currentPage"
        @current-change="handleCurrentChange">
      </el-pagination>
      <!--分页-->
    </div>
  </div>
</template>

<script>
import {approvalTask} from '@/api/todoList'
export default {
  name: '',
  data () {
    return {
      search_input: '',
      statusOptions: [{
        value: null,
        label: '全部'
      }, {
        value: 0,
        label: '待审批'
      }, {
        value: 1,
        label: '通过'
      }, {
        value: 2,
        label: '不通过'
      }, {
        value: 3,
        label: '已撤回'
      }],
      auditStatus: null,
      sourceOptions: [{
        value: null,
        label: '全部'
      }, {
        value: 1,
        label: '公开招标'
      }, {
        value: 2,
        label: '邀请招标'
      }, {
        value: 3,
        label: '竞争性谈判'
      }, {
        value: 4,
        label: '单一来源采购'
      }, {
        value: 5,
        label: '询价采购'
      }, {
        value: 6,
        label: '竞争性磋商'
      }, {
        value: 9,
        label: '其他'
      }],
      tenderMode: null,
      typeOptions: [{
        value: null,
        label: '全部'
      }, {
        value: 1,
        label: '招标文件'
      }, {
        value: 2,
        label: '招标公告'
      }],
      flowStatus: null,
      // 当前页
      currentPage: 1,
      pageNo: 0,
      total: 100, // 总条数
      pageSize: 10, // 每页展示条数
      tableData: []
    }
  },
  methods: {
    search () {
      this.currentPage = 1
      this.pageNo = 0
      this.getList()
    },
    handleCurrentChange (nowNum) {
      this.currentPage = nowNum
      this.pageNo = (nowNum - 1) * this.pageSize
      this.getList()
    },
    handleFlowStatus (tenderMode, isPreBid) {
      let flowStr = '招标公告'
      switch (Number(tenderMode)) {
        case 1:
          flowStr = isPreBid ? '资格预审公告' : '招标公告'
          break
        case 2:
          flowStr = '招标邀请书'
          break
        case 3:
          flowStr = '招标公告'
          break
        case 4:
          flowStr = '招标邀请书'
          break
        case 5:
          flowStr = '招标公告'
          break
        case 6:
          flowStr = '招标公告'
          break
      }
      return flowStr
    },
    handleDetail (scope) {
      this.$router.push({path: scope.row.path, query: {isApproved: 3}})
    },
    getList () {
      let query = {
        pageNo: this.pageNo,
        pageSize: this.pageSize,
        auditStatus: this.auditStatus,
        flowStatus: this.flowStatus,
        tenderMode: this.tenderMode,
        messageLike: this.search_input === '' ? null : this.search_input
      }
      approvalTask.launchedByMe(query).then((res) => {
        this.tableData = res.data.approvalTaskList.list
        this.total = res.data.approvalTaskList.total
      })
    }
  },
  mounted () {
    this.getList()
  }
}
</script>

