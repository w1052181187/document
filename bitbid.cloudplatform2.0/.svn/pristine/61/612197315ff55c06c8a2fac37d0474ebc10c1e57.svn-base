        series: [
          {
            type: 'pie',
            data: this.expenditureRatioData,
            width: '80%',
            startAngle: 270, // 起始角度
            itemStyle: {
              normal: {
                label: {
                  show: true, // 开启显示
                  formatter: '{c} {d}%',
                  textStyle: { // 数值样式
                    color: '#333'
                  }
                }
              }
            }
          }
        ]
      }
      this.expenditureRatioCharts.setOption(option)
    },
    // 项目是收支分析柱状图
    loadProjectAnalysisCharts () {
      this.projectAnalysisCharts = echarts.init(document.getElementById('projectAnalysis'))
      var option = {
        title: {
          text: '项目收支分析'
        },
        grid: { // 图标距离
          top: '20%', // 距离上边的距离
          bottom: '10%', // 距离下边的距离
          left: '4%', // 距离左边的距离
          right: '1%' // 距离右边的距离
        },
        legend: {
          type: 'scroll',
          top: 20,
          right: 10
        },
        color: ['#3fa5ee', '#7dc745', '#ff9e50'], // 柱状条颜色
        xAxis: {
          type: 'category',
          axisLine: {show: true}, // 是否显示坐标轴轴线
          axisTick: {show: false} // 是否显示坐标轴刻度
        },
        yAxis: {
          axisLine: {show: true}, // 是否显示坐标轴轴线
          axisTick: {show: false} // 是否显示坐标轴刻度
        },
        // 声明多个 bar 系列，默认情况下，每个系列会自动对应到 dataset 的每一列。
        series: [
          {
            type: 'bar',
            barWidth: 14, // 柱图宽度
            barGap: '100%', // 多个并排柱子设置柱子之间的间距
            itemStyle: {
              normal: {
                label: {
                  show: true, // 开启显示
                  position: 'top', // 在上方显示
                  textStyle: { // 数值样式
                    color: '#333',
                    fontSize: 12
                  }
                }
              }
            }
          }, {
            type: 'bar',
            barWidth: 14, // 柱图宽度
            barGap: '100%', // 多个并排柱子设置柱子之间的间距
